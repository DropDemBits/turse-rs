{
    "name": "vscode-turing",
    "version": "0.0.1",
    "author": {
        "name": "DropDemBits"
    },
    "publisher": "dropdembits",
    "repository": {
        "url": "https://github.com/DropDemBits/turse-rs.git",
        "type": "git"
    },
    "displayName": "Turing Language Support",
    "description": "Syntax highlighting & LSP provider for HoltSoft's Turing language",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:turing"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "turing",
                "aliases": [
                    "Turing",
                    "turing"
                ],
                "extensions": [
                    ".t",
                    ".tu"
                ],
                "configuration": "./dist/language-config.json"
            }
        ],
        "grammars": [
            {
                "language": "turing",
                "scopeName": "source.turing",
                "path": "./dist/turing.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "grunt compile",
        "watch": "grunt watch",
        "package": "grunt package",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "copy-webpack-plugin": "^9.0.1",
        "cson-parser": "^4.0.9",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "grunt": "^1.4.0",
        "grunt-cson": "^0.17.0",
        "grunt-webpack": "^4.0.3",
        "mocha": "^8.1.3",
        "ts-loader": "^8.0.11",
        "typescript": "^4.1.2",
        "vsce": ">=2.0",
        "vscode-test": "^1.4.1",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    }
}